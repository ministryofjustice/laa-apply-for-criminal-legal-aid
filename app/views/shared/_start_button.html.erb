<%
  if signed_in?
    button_method = :get
    button_url = crime_applications_path
  else
    button_method = :post
    button_url = provider_saml_omniauth_authorize_path
  end
%>

<%= button_to button_url, method: button_method,
              class: 'govuk-button govuk-button--start govuk-!-margin-top-4', form_class: 'app-button--start',
              data: { module: 'govuk-button' }, role: 'button', draggable: false do %>
  <%= t('helpers.submit.start') %>
  <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
  </svg>
<% end %>
