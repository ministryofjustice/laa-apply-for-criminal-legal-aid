<% if prompt.result_for?(group:, persona:) %>
  <h2 class="govuk-heading-s"><%= title %></h2>

  <ul class="govuk-body">
    <% prompt.result_for(group:, persona:).each do |rule| %>
      <% rule[:run][persona][:prompt].each do |sentence| %>
        <li
          data-rule-name="<%=rule[:id] %>"
          data-rule-key="<%=rule[:key] %>">
          <%= sentence %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>
