<% title t('.page_title') %>
<% step_header %>

  <%= govuk_error_summary(@form_object) %>

<div class="govuk-grid-row app-inverted--card app-inverted-text">
  <div class="govuk-grid-column app-inverted-text">
    <h1 class="govuk-heading-l app-inverted-text"><%= t '.heading' %></h1>
  </div>
</div>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= step_form @form_object do |f| %>
      <%= f.govuk_radio_buttons_fieldset(:confirm_result, legend: { tag: 'h1', size: 'l' }) do %>
        <% @form_object.choices.each do |choice| %>
          <%= f.govuk_radio_button :confirm_result, choice.value %>
        <% end %>
      <% end %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
