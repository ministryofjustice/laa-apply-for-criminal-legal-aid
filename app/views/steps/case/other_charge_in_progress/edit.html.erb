<% subject = @form_object.form_subject.to_param %>
<% title legend_t(:"#{subject}_other_charge_in_progress") %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(@form_object) %>
    <%= step_form @form_object do |f| %>
      <%= f.govuk_collection_radio_buttons :other_charge_in_progress, @form_object.choices,
                                           :value, inline: false,
                                           legend: { text: legend_t(:"#{subject}_other_charge_in_progress"), tag: 'h1', size: 'xl' } %>
      <%= f.continue_button %>
    <% end %>
  </div>
</div>
