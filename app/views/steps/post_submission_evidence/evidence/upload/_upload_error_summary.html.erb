<%# To display dropzone error messages by toggling the 'app-evidence-upload-hidden' class %>
<div class="govuk-error-summary app-evidence-upload-hidden" tabindex="-1" data-module="govuk-error-summary"
     id="error-summary">
  <div role="alert">
    <h2 class="govuk-error-summary__title" id="error-summary-title">
      <%= t('errors.error_summary.heading') %>
    </h2>
    <div class="govuk-error-summary__body">
      <ul class="govuk-list govuk-error-summary__list" id="error-summary-list"></ul>
    </div>
  </div>
</div>
