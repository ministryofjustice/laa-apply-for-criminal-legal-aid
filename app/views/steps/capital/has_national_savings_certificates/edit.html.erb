<% title t('.heading') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: 'shared/flash_banner' %>
    <%= govuk_error_summary(@form_object) %>
    <span class="govuk-caption-xl"><%= t('steps.capital.caption') %></span>

    <%= step_form @form_object do |f| %>
      <%= f.govuk_collection_radio_buttons(:has_national_savings_certificates, YesNoAnswer.values, :value, inline: false, legend: { text: t('.heading'), tag: 'h1', size: 'xl' }) %>
      <%= f.continue_button %>
    <% end %>
  </div>
</div>
