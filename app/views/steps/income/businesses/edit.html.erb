<% title legend_t(:details) %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl"><%= t('steps.income.caption') %></span>
    <%= govuk_error_summary(@form_object) %>

    <h1 class="govuk-heading-xl"><%=legend_t(:details) %></h1>
    <%= step_form @form_object do |f| %>
      <%= f.govuk_text_field :trading_name, label: { tag: 'h2', size: 'm' }, autocomplete: 'off' %>
      <h2 class="govuk-heading-m"><%= t('helpers.label.steps_income_businesses_form.address') %></h2>
      <%= f.govuk_text_field :address_line_one, autocomplete: 'off' %>
      <%= f.govuk_text_field :address_line_two, autocomplete: 'off' %>
      <%= f.govuk_text_field :city, autocomplete: 'off', width: 'one-half' %>
      <%= f.govuk_text_field :country, autocomplete: 'off', width: 'one-half' %>
      <%= f.govuk_text_field :postcode, autocomplete: 'off', width: 'one-third' %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
