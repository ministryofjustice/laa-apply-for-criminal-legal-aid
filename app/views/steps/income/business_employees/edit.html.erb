<% title legend_t(:has_employees) %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl"><%= t('steps.income.caption') %></span>
    <%= govuk_error_summary(@form_object) %>

    <%= step_form @form_object do |f| %>
      <%= f.govuk_radio_buttons_fieldset(:has_employees, legend: { text: legend_t(:has_employees), tag: 'h1', size: 'xl' }) do %>
        <%= f.govuk_radio_button :has_employees, YesNoAnswer::YES do %>
          <%= f.govuk_number_field :number_of_employees, width: 'one-third'  %>
        <% end %>

        <%= f.govuk_radio_button :has_employees, YesNoAnswer::NO %>
      <% end %>
      <%= f.continue_button %>
    <% end %>
  </div>
</div>
