<%= govuk_header(homepage_url: root_path, classes: "govuk-header-#{HostEnv.env_name}") do |header|
  header.with_custom_logo do %>
    <%= render partial: 'layouts/moj_crest' %>
  <% end %>
  <%= header.with_product_name(name: t('layouts.header.organisation_name')) %>

  <% if signed_in? %>
    <%= header.with_navigation_item(
          text: current_provider.display_name,
          href: nil,
          active: false,
          html_attributes: { aria: { role: 'paragraph' } },
          classes: 'app-header__auth-user'
        ) %>

    <%= header.with_navigation_item(
          text: t('layouts.header.sign_out'),
          href: provider_omniauth_logout_path,
          active: false,
          html_attributes: { aria: { role: 'button' } }
        ) %>
  <% end %>
<% end %>
