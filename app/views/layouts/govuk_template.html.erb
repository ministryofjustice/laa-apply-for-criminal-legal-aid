<%= yield :top_of_page %>
<!DOCTYPE html>
<html lang="<%= content_for?(:html_lang) ? yield(:html_lang) : 'en' %>" class="govuk-template">

<head>
  <title><%= yield(:page_title) %></title>

  <%= tag.meta charset: 'utf-8' %>
  <%= tag.meta 'http-equiv': 'X-UA-Compatible', content: 'IE=edge' %>
  <%= tag.meta name: 'viewport', content: 'width=device-width, initial-scale=1, viewport-fit=cover' %>
  <%= tag.meta name: 'theme-color', content: '#0b0c0c' %>
  <%= tag.meta property: 'og:image', content: asset_path('images/govuk-opengraph-image.png') %>

  <%= favicon_link_tag asset_path('images/favicon.ico'), rel: 'icon' %>
  <%= favicon_link_tag asset_path('images/favicon.svg'), rel: 'icon', type: 'image/svg+xml' %>
  <%= favicon_link_tag asset_path('images/govuk-icon-mask.svg'), rel: 'mask-icon', color: '#0b0c0c' %>
  <%= favicon_link_tag asset_path('images/govuk-icon-180.png'), rel: 'apple-touch-icon' %>
  <%= favicon_link_tag asset_path('manifest.json'), rel: 'manifest' %>

  <%= stylesheet_link_tag 'application', media: 'all', nonce: true %>
  <%= javascript_include_tag 'application', defer: true, nonce: true %>

  <%= yield :head %>
</head>

<body class="govuk-template__body app-body <%= ['app-body', HostEnv.env_name].join('--') %>">
<%= javascript_tag nonce: true do %>
  document.body.className += ' js-enabled' + ('noModule' in HTMLScriptElement.prototype ? ' govuk-frontend-supported' : '');
<% end %>

<%= yield(:cookie_banner) if FeatureFlags.google_analytics.enabled? && controller_name != 'cookies' %>

<a href="#main-content" class="govuk-skip-link" data-module="govuk-skip-link">
  <%= content_for?(:skip_link_message) ? yield(:skip_link_message) : 'Skip to main content' %>
</a>

<%= yield(:header) %>

<div class="govuk-width-container">
  <%= yield(:phase_banner) %>
</div>

<%= yield(:primary_navigation) %>

<div class="govuk-width-container">
  <%= yield(:back_link) %>
  <%= yield(:language_toggle) %>

  <main class="govuk-main-wrapper" id="main-content" role="main">
    <%= yield(:content) %>
  </main>
</div>

<footer class="govuk-footer" role="contentinfo">
  <div class="govuk-width-container ">
    <%= yield(:footer_top) %>

    <div class="govuk-footer__meta">
      <div class="govuk-footer__meta-item govuk-footer__meta-item--grow">
        <%= yield(:footer_links) %>

        <svg aria-hidden="true" focusable="false" class="govuk-footer__licence-logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 483.2 195.7" height="17" width="41">
          <path fill="currentColor" d="M421.5 142.8V.1l-50.7 32.3v161.1h112.4v-50.7zm-122.3-9.6A47.12 47.12 0 0 1 221 97.8c0-26 21.1-47.1 47.1-47.1 16.7 0 31.4 8.7 39.7 21.8l42.7-27.2A97.63 97.63 0 0 0 268.1 0c-36.5 0-68.3 20.1-85.1 49.7A98 98 0 0 0 97.8 0C43.9 0 0 43.9 0 97.8s43.9 97.8 97.8 97.8c36.5 0 68.3-20.1 85.1-49.7a97.76 97.76 0 0 0 149.6 25.4l19.4 22.2h3v-87.8h-80l24.3 27.5zM97.8 145c-26 0-47.1-21.1-47.1-47.1s21.1-47.1 47.1-47.1 47.2 21 47.2 47S123.8 145 97.8 145" />
        </svg>
        <span class="govuk-footer__licence-description">
          <%= t('layouts.govuk_template_html') %>
        </span>
      </div>
      <div class="govuk-footer__meta-item">
        <a class="govuk-footer__link govuk-footer__copyright-logo" href="https://www.nationalarchives.gov.uk/information-management/re-using-public-sector-information/uk-government-licensing-framework/crown-copyright/">Â© Crown copyright</a>
      </div>
    </div>
  </div>
</footer>

<%= yield :body_end %>
</body>

</html>
