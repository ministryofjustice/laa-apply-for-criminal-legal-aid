<%= govuk_service_navigation(navigation_id: 'navigation') do |sn| %>
  <%= sn.with_service_name(
        service_name: service_name,
        service_url: root_path
      ) %>

  <%= sn.with_navigation_item(
        text: t('.your_applications'),
        href: crime_applications_path,
        active: current_page?('/applications') || controller.is_a?(CompletedApplicationsController)
      ) %>

  <%= sn.with_navigation_item(
        text: t('.search'),
        href: new_application_searches_path,
        active: controller.controller_name == 'application_searches'
      ) %>
<% end %>
